<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hodzi.alfabanktask"
    >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AlfaApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.hodzi.alfabanktask.splash.SplashActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/AppTheme.Launcher"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.hodzi.alfabanktask.feed.FeedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity
            android:name="com.hodzi.alfabanktask.feed.detail.DetailFeedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            />

    </application>

</manifest>